{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link href="{{ asset('styles/admin.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block title %}Details de l'artiste
{% endblock %}

{% block body %}
	{% block header %}
		{% include 'admin/adminHeader.html.twig' %}
	{% endblock header %}
	<h2 class="text-center m-5">Détails de
		<span class="adminTitre">
			{{artist.pseudo}}</span>
	</h2>
	<div class="container d-flex justify-content-center">
		<div class="card shadow p-3 mb-5 bg-body rounded" style="width: 40rem;">
			<img src="{{ asset('/cover_picture/' ~ artist.coverPicture) }}" class="card-img-top" alt="Image de l'artiste">
			<div class="card-body">
				<h5 class="card-title fs-2">{{artist.pseudo}}</h5>
			</div>
			<ul class="list-group list-group-flush ms-8">
				<li class="list-group-item fs-3">Localisation: 
					<span class="ms-3 fs-5">{{artist.tattooShop}}
					 à {{artist.city}}</span></li>
				<li class="list-group-item fs-3">Email: 
					<span class="ms-3 fs-5">{{artist.email}}</span></li>
				<li class="list-group-item fs-3">Numéro de Siret:
					<span class="ms-2 fs-5">{{artist.siret}}</span></li>
				
					<div class="list-group-item fs-5 text-center">
					{% for style in artist_style %}
					<p class="stylesAdmin d-inline">{{style.name}}</p>
					{% endfor %}
					</div>
				<li class="list-group-item fs-3 " style="word-break: normal; ">Description: 
					<span class=" d-block fs-5">{{artist.description}}</span></li>
				
			</ul>

			<div class="card-body d-flex justify-content-evenly">
				<a href="{{ path('artist_update', {id: artist.id}) }}" class="card-link btn btn-warning  detailsBtn">Modifier</a>
				<a href="{{ path('artist_tampon', {id: artist.id}) }}" class="card-link btn btn-danger detailsBtn">Supprimer</a>
			</div>

		</div>
	</div>

{% endblock %}
