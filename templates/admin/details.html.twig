{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link href="{{ asset('styles/admin.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block title %}Details de l'artiste
{% endblock %}

{% block body %}
	{% block header %}
		{% include 'admin/adminHeader.html.twig' %}
	{% endblock header %}
	<h2 class="text-center m-5">Détails de
		<span class="adminTitre">
			{{artist.pseudo}}</span>
	</h2>
	<div class="container d-flex justify-content-center">
		<div class="card shadow p-3 mb-5 bg-body rounded" style="width: 40rem;">
			<img src="{{ asset('/cover_picture/' ~ artist.coverPicture) }}" class="card-img-top" alt="Image de l'artiste">
			<div class="card-body">
				<h5 class="card-title fs-2">{{artist.pseudo}}</h5>
			</div>
			<ul class="list-group list-group-flush text-start">
				<li class="list-group-item fs-4">Localisation: 
					<span>{{artist.tattooShop}}
					{{artist.city}}</span></li>
				<li class="list-group-item fs-4 d-flex ">Email: 
					<span>{{artist.email}}</span></li>
				<li class="list-group-item fs-4 d-inline-block text-start" style="word-break: normal; ">Description: 
					<span>{{artist.description}}</span></li>
				<li class="list-group-item fs-5 d-flex ">Numéro de Siret:
					<span>{{artist.siret}}</span></li>
				{% for style in artist_style %}
					<li class="list-group-item fs-5 text-center">{{style.name}}</li>
				{% endfor %}
			</ul>

			<div class="card-body d-flex justify-content-evenly">
				<a href="{{ path('artist_update', {id: artist.id}) }}" class="card-link btn btn-warning  detailsBtn">Modifier</a>
				<a href="{{ path('artist_tampon', {id: artist.id}) }}" class="card-link btn btn-danger detailsBtn">Supprimer</a>
			</div>

		</div>
	</div>

{% endblock %}
