{% extends 'base.html.twig' %}

{% block title %}Admin Artistes{% endblock %}

{% block body %}
<h1>Gestion des artistes</h1>

<a class="btn btn-primary" href="{{ path("artist_add") }}">Ajouter un artiste</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Pseudo</th>
            <th>Email</th>
            <th>Nom du salon</th>
            <th>Ville</th>
            <th>Date d'inscription</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for artist in artists %}
        <tr>
            <td>{{artist.id}}</td>
            <td>{{artist.pseudo}}</td>
            <td>{{artist.email}}</td>
            <td>{{artist.tattooShop}}</td>
            <td>{{artist.city}}</td>
            <td>{{artist.createdAt|date('d/m/Y')}}</td>
            <td class="text-center">
             <a href="{{ path('admin_details', {id: artist.id}) }}" class="btn btn-primary">DÃ©tails</a>
            <a href="{{ path('artist_update', {id: artist.id}) }}" class="btn btn-warning">Modifier</a> 
            <a href="{{ path('artist_tampon', {id: artist.id}) }}" class="btn btn-danger">supprimer</a> 
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
