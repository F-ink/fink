{% extends 'base.html.twig' %}

{% block title %}Gestion des styles de tatouages{% endblock %}

{% block body %}

<h1>Gestoion des styles de tatouages</h1>

<a class="btn btn-primary" href="{{ path("admin_styles_add") }}">Ajouter un style</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for style in styles %}
        <tr>
            <td>{{style.id}}</td>
            <td>{{style.name}}</td>
            <td class="text-center">
            <a href="{{ path('admin_styles_style_update', {id: style.id}) }}" class="btn btn-warning">Modifier</a> 
            <a href="{{ path('admin_styles_style_tampon', {id: style.id}) }}" class="btn btn-danger">supprimer</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
