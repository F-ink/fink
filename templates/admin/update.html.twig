		<div class="mb-3">
			<input class="form-control" type="text" name="city" value="{{ artist.city }}" placeholder="Ville">
		</div>
		<div class="mb-3">
			<input class="form-control" type="text" name="address" value="{{ artist.address }}" placeholder="Adresse">
