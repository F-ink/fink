{% extends 'base.html.twig' %}

{% block title %}Modifier un tatoueur
{% endblock %}
{% block body %}
<h1>Modification du tatoueur</h1>
<form class="m-3" action="" method="POST">

	<div class="mb-3">
		<input type="text" name="email" value="{{ artist.email }}">
	</div>
	<div class="mb-3">
		<input type="text" name="lastname" value="{{ artist.lastname }}">
	</div>
	<div class="mb-3">
		<input type="text" name="firstname" value="{{ artist.firstname }}">
	</div>
	<div class="mb-3">
		<input type="text" name="pseudo" value="{{ artist.pseudo }}">
	</div>
	<div class="mb-3">
		<input type="text" name="tattooshop" value="{{ artist.tattooShop }}">
	</div>
	<div class="mb-3">
		<input type="text" name="address" value="{{ artist.address }}">
	</div>
	<div class="mb-3">
		<input type="text" name="profilePicture" value="{{ artist.profilePicture }}">
	</div>
	<div class="mb-3">
		<textarea type="text" name="description" value="">{{ artist.description }}</textarea>
	</div>
	<div class="mb-3">
		<input type="text" name="instagram" value="{{ artist.instagram }}">
	</div>
	<div class="mb-3">
		<input type="text" name="siret" value="{{ artist.siret }}">
	</div>

	<select class="search-bar" id="styles" name="styles[]" multiple="multiple" placeholder="Style(s)">
		{% for style in artist_style %}
			<option value="{{style.id}}">{{style.name}}</option>
		{% endfor %}
	</select>

	<div>
		<button class="btn btn-success" type="submit" name="submit">Valider</button>
	</div>

</form {% endblock %}
