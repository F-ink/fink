{% block title %}Modifier un tatoueur
{% endblock %}
{% block body %}
{% block header %}
		{% include 'admin/adminHeader.html.twig' %}
{% endblock header %}
<h1 class="text-center">Modification du
	<span class="adminTitre">tatoueur</span>
</h1>
<form class="m-3" action="" method="POST">
	<div class="container formAdmin">
		<div class="mb-3">
			<input class="form-control" type="text" name="email" value="{{ artist.email }}" placeholder="Email">
		</div>
		<div class="mb-3">
			<input class="form-control" type="text" name="lastname" value="{{ artist.lastname }}" placeholder="Nom de famille">
		</div>
