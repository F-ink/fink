


{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="titleconnect">S'INSCRIRE</h1>

    <button type="submit">
			S'inscrire avec Instagram
			<i class="lab la-instagram"></i>

		</button>
    {{ form_start(registrationForm) }}
        {{ form_widget(registrationForm.pseudo , {'attr': {'placeholder': 'Votre pseudo'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Votre Email'}}) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Votre mot de passe'}}) }}
        {{ form_widget(registrationForm.createdAt, { 'attr' : { 'style':'display:none'} }) }}
        {{ form_widget(registrationForm.agreeTerms) }}

        <button type="submit">
			S'inscrire
		</button>
    {{ form_end(registrationForm) }}
{% endblock %}
