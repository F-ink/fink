{% extends 'base.html.twig' %}
{% block title %}Modifier votre Profil {% endblock %}

{% block body%}
<h1>Modifier mon profil<h1>
       <form method="POST" enctype="multipart/form-data">
        <div>
         <label for="lastname">Votre nom: </label>
         <input type="text" name="lastname" placeholder="Entrez votre nom ici" value="{{artist.lastname}}" required>
        </div>
        <div>
          <label for="firstname">Votre prenom : </label>
          <input type="text" name="firstname" placeholder="Entrez votre prenom" value="{{artist.firstname}}" required>
        </div>
         <div>
         <label for="pseudo">Votre pseudo: </label>
         <input type="text" name="pseudo" placeholder="Entrez votre nom ici" value="{{artist.pseudo}}" required>
        </div>
        <div>
          <label for="profile_picture">Choisissez une photo pour votre profil</label>
          <input type="file" name="profile_picture" placeholder="Choississez une photo de profil"  required>
        </div>
        <div>
          <label for="tattoo_shop">Nom de votre salon : </label>
          <input type="text" name="tattoo_shop" placeholder="Votre salon" value="{{artist.tattooShop}}" required>
        </div>
        <div>
          <label for="city">Ou peut-on vous trouver? </label>
          <input type="text" name="city" placeholder="Entrez votre ville" value="{{artist.city}}" required>
        </div>
        <div>
           <label for="address">Votre adresse : </label>
           <input type="text" name="address" placeholder="Votre adresse" value="{{artist.address}}" required>
        </div>
        <div>
           <label for="description">Description</label>
           <textarea type="text" name="description" placeholder="Parlez-nous de votre art et votre histoire" required> {{artist.description}}</textarea>
        </div>
        <div>
          <label for="siret">Votre Siret : </label>
          <input type="text" name="siret" placeholder="Entrez votre siret" value="{{artist.siret}}" required>
        </div>
        <div>
          <label for="instagram">Avez-vous Instagram?</label>
          <input type="text"  name="instagram" placeholder="Entrez votre pseudo :) " value="{{artist.instagram}}">
        </div>
        <div>
          <input type="submit" name="submit" value="Modifier mon compte">
        </div>  
</form>



{% endblock %}